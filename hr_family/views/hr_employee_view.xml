<openerp>
    <data>
        
        <record id="view_hr_employee_family_form_inherit" model="ir.ui.view">
            <field name="name">view.hr.employee.family.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr='//notebook' position="inside">
                    <page name="family" string="Familia" groups="base.group_hr_user">
                        <field name="fam_ids" nolabel="1"/>
                    </page>
                </xpath>
            </field>
        </record>
               
    </data>
</openerp>