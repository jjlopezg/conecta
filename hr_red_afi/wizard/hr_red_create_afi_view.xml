<openerp>
<data>

  <record id="wizard_hr_red_create_afi_form" model="ir.ui.view">
            <field name="name">wizard.hr.red.create.afi.form</field>
            <field name="model">hr.red.create.afi</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
		        <form string="Comunicacion AFI">
                    <header>
                        <div>
                            <button name="do_process" string="Generar Envio" type="object" states="draft" class="oe_highlight"/>
                            <button name="do_back" string="Volver" type="object" states="done,fail" class="oe_highlight"/>
                            o
                            <button string="Cerrar" special="cancel" type="object" class="oe_highlight"/>
                        </div>
                    </header>
    				<sheet>
                        <field name="state" invisible="1"/>
                        <field name="filename" invisible="1"/>
                         <group>
                            <group>
                                <field name="company_ids" widget="many2many_tags" placeholder="Compañia" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="user_filename" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="password" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="date" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="time" widget="timepicker" options="{'step': '15', 'disableTextInput': False}" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="test" colspam='2' attrs="{'readonly':[ ('state','!=', 'draft') ]}"/>
                                <field name="real" attrs="{'readonly':[ ('state','!=', 'draft') ]}"/>
                            </group>
                             <group></group>
                         </group>

                        <group>
                            <div states="draft">
                                <div>
                                    <field name="afi_ids" widget="many2many"
                                           options="{'no_open': True,'no_create': True}"
                                           domain="[
                                                    ('state', '=', 'draft'),
                                                    ]"
                                           attrs="{'readonly':[('state','!=','draft')]}">
                                        <!--('company_id', 'in', company_ids),-->
                                        <tree string="AFI">
                                            <field name="employee_id"/>
                                            <field name="date_start"/>
                                            <field name="date_contract"/>
                                            <field name="move_id"/>
                                            <field name="position_id"/>
                                            <field name="state"/>
	                                    </tree>
                                    </field>

                                </div>
                            </div>

                        </group>
                        <group>
                            <div>
                                <field name="note" nolabel="1" attrs="{'invisible':[('state','!=','done'),('state','!=','fail')]}"/>
                                <h2>
                                    <p>
                                        <field name="file" readonly="1" filename="filename" attrs="{'invisible':[('state','!=','done')]}"/>
                                    </p>
                                </h2>

                            </div>
                        </group>
                        <div states="done">
                            <p>Comunicacion a <strong>
                                <!--<a href="https://www.sepe.es/contenidos/OficinaVirtual/info_contrata.html">SEPE</a>--></strong></p>
                        </div>

                    </sheet>
            	</form>
            </field>
        </record>


	<record id="action_hr_red_create_afi" model="ir.actions.act_window">
	    <field name="name">Comunicacion AFI</field>
	    <field name="type">ir.actions.act_window</field>
	    <field name="res_model">hr.red.create.afi</field>
	    <field name="view_type">form</field>
	    <field name="view_mode">form</field>
	    <field name="view_id" ref="wizard_hr_red_create_afi_form"/>
        <field name="target">new</field>
	</record>


    <menuitem id="menu_hr_red_create_afi"
              name="Comunicacion AFI"
              action="action_hr_red_create_afi"
              parent="hr_red_afi.hr_menu_relations_red"
              sequence="10"
              groups="base.group_hr_user"/>

  </data>
</openerp>
